{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "ml-scripts/**", "outDir": "dist" },
      { "include": "src/ml-scripts/requirements.txt", "outDir": "dist/ml-scripts" }
    ],
    "outDir": "dist",
    "watchAssets": true
  }
}
